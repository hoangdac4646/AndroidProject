<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_game2"
    android:orientation="horizontal"
    android:visibility="visible"
    tools:context=".BattleShip.BattleShipGameActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:orientation="vertical"
            android:weightSum="4"
            >

            <LinearLayout
                android:layout_gravity="center"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1">

                <Button
                    android:id="@+id/btn_chat"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="2dp"
                    android:background="@drawable/chat_press" />

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1">

                <TextView
                    android:gravity="center"
                    android:id="@+id/txt_p1Name"
                    android:layout_width="84dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/tag_playername1"
                    android:textAlignment="center"
                    android:textColor="#ffffff"
                    android:textSize="15dp"
                    android:layout_gravity="center"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="0.3">

                <ImageView
                    android:layout_width="500px"
                    android:layout_height="10dp"
                    android:background="@drawable/location1" />

            </LinearLayout>

            <LinearLayout
                android:layout_gravity="center"
                android:layout_weight="2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="10dp"
                    android:layout_height="500px"
                    android:layout_marginEnd="5dp"
                    android:background="@drawable/location2"
                    />
                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    >
                    <TableLayout
                        android:id="@+id/map_bs1"
                        android:layout_width="500px"
                        android:layout_height="500px"
                        android:layout_marginBottom="5dp"
                        android:background="@drawable/background_game2_map">

                    </TableLayout>

                </FrameLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnGun"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="130dp"
                android:background="@drawable/btn_rocket" />

            <Button
                android:id="@+id/btnBomb"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/btn_boom" />

            <Button
                android:id="@+id/btnRada"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/btn_radar" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:orientation="vertical"
            android:weightSum="4"
            >

            <LinearLayout

                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                >

                <Button
                    android:id="@+id/btn_pause"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:background="@drawable/pause_press" />

                <Button
                    android:id="@+id/btn_sound"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="2dp"
                    android:background="@drawable/sound_press" />

            </LinearLayout>

            <LinearLayout
                android:layout_gravity="center"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1">

                <TextView
                    android:gravity="center"
                    android:id="@+id/txt_p2Name"
                    android:layout_width="85dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/tag_playername2"
                    android:textAlignment="center"
                    android:textColor="#ffffff"
                    android:textSize="15dp"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="0.3">

                <ImageView
                    android:layout_width="500px"
                    android:layout_height="10dp"
                    android:layout_marginStart="20dp"
                    android:background="@drawable/location1"
                    />

            </LinearLayout>


            <LinearLayout
                android:layout_weight="2"
                android:layout_gravity="center"
                android:layout_marginLeft="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="10dp"
                    android:layout_height="500px"
                    android:layout_marginEnd="5dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/location2"
                    />
                <FrameLayout

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    >
                    <TableLayout
                        android:id="@+id/map_bs2"
                        android:layout_width="500px"
                        android:layout_height="500px"
                        android:layout_marginBottom="5dp"
                        android:background="@drawable/background_game2_map">

                    </TableLayout>

                </FrameLayout>


            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</FrameLayout>